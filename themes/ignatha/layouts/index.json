[
    {{ range $index, $value := where .Site.Pages "Type" "posts" }}
    {{ if $index }}, {{ end }}
    {
        "url" : "{{ .RelPermalink }}",
        "title" : "{{ .Title }}",
        "content" : {{ .Summary | plainify | jsonify }},
        "date" : "{{ .Date | time.Format ":date_long" }}"
    }
    {{ end }}
]